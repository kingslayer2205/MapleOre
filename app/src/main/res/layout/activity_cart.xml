<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.CartActivity">

    <RelativeLayout
    android:id="@+id/rltemp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        >
<TextView
android:id="@+id/Cart_total_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:text="Total Price: 0/- "
    android:textColor="@android:color/white"
android:textSize="20sp"
    android:textAlignment="center"
    android:layout_marginTop="10dp"
></TextView>

    </RelativeLayout>

    <TextView
        android:id="@+id/msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
android:layout_centerVertical="true"
        android:text="Congratulations! Your Order has been placed Successfully... Soon you will recieve order at your DoorSteps"
android:textSize="20dp"
        android:visibility="gone"
        ></TextView>

    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/Cart_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/rltemp"
    android:layout_above="@+id/Cart_next_process_button"
    ></androidx.recyclerview.widget.RecyclerView>
    


    <Button
        android:id="@+id/Cart_next_process_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
    android:text="Next"
    android:textColor="@android:color/white"
    android:background="@color/colorPrimary"
    android:layout_margin="10dp"
    android:textSize="18dp"
    android:textStyle="bold"
></Button>



</RelativeLayout>